<?xml version="1.0"?>
<context>
    <anchorx>center</anchorx>
    <anchory>top</anchory>
    <offsetx>0</offsetx>
    <offsety>45%</offsety>
    <width>90%</width>
    <height>90%</height>
    <background>grid9_dialog</background>
    
    <!-- sub items -->
    <items>
        <item>
            <identifier>current_unit_type_icon</identifier>
            <type>image</type>
            <anchorx>center</anchorx>
            <anchory>center</anchory>
            <offsetx>0</offsetx>
            <offsety>-85</offsety>
            <width>80</width>
            <height>80</height>
            <image>unit_type_default</image>
        </item>

        <item>
            <identifier>current_unit_name</identifier>
            <type>label</type>
            <title>unit name</title>
            <anchorx>center</anchorx>
            <anchory>center</anchory>
            <offsetx>0</offsetx>
            <offsety>-150</offsety>
            <width>300</width>
            <height>40</height>
        </item>
        
        <item>
            <identifier>hint</identifier>
            <type>label</type>
            <title>Please choose a promotion:</title>
            <anchorx>center</anchorx>
            <anchory>center</anchory>
            <offsetx>0</offsetx>
            <offsety>-200</offsety>
            <width>300</width>
            <height>40</height>
        </item>
        
        <!-- pronotions -->
        
        <item>
            <identifier>okay_button</identifier>
            <type>button</type>
            <title>Okay</title>
            <result>OKAY</result>
            <anchorx>center</anchorx>
            <anchory>center</anchory>
            <offsetx>0</offsetx>
            <offsety>-85%</offsety>
            <width>200</width>
            <height>42</height>
        </item>
    </items>
</context>



