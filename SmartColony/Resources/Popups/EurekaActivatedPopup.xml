<?xml version="1.0"?>
<context>
    <anchorx>center</anchorx>
    <anchory>center</anchory>
    <offsetx>0</offsetx>
    <offsety>25%</offsety>
    <width>90%</width>
    <height>50%</height>
    <background>grid9_dialog</background>
    
    <!-- sub items -->
    <items>
        <item>
            <identifier>popup_image</identifier>
            <type>image</type>
            <anchorx>center</anchorx>
            <anchory>center</anchory>
            <offsetx>0</offsetx>
            <offsety>70</offsety>
            <width>80</width>
            <height>80</height>
            <image>questionmark</image>
        </item>
        <item>
            <identifier>popup_title</identifier>
            <type>label</type>
            <title>Eureka title</title>
            <anchorx>center</anchorx>
            <anchory>center</anchory>
            <offsetx>0</offsetx>
            <offsety>10</offsety>
            <width>200</width>
            <height>40</height>
        </item>
        <item>
            <identifier>popup_summary</identifier>
            <type>label</type>
            <title>Eureka text</title>
            <anchorx>center</anchorx>
            <anchory>center</anchory>
            <offsetx>0</offsetx>
            <offsety>-40</offsety>
            <width>200</width>
            <height>40</height>
        </item>
        
        <item>
            <identifier>okay_button</identifier>
            <type>button</type>
            <title>Okay</title>
            <result>OKAY</result>
            <anchorx>center</anchorx>
            <anchory>center</anchory>
            <offsetx>0</offsetx>
            <offsety>-120</offsety>
            <width>200</width>
            <height>42</height>
        </item>
    </items>
</context>
